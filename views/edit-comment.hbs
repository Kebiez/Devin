<div class="marginOnSides">
    {{#if validationErrors.length}}
    {{#each validationErrors}}
        <p class="error-text">{{this}}</p>
    {{/each}}
    {{/if}}
    <form action="/blogs-page/blog-post/{{comments.blogID}}/edit-comment/{{comments.id}}" method="post">
        <textarea name="comment" cols="30" rows="3">{{comments.commentContent}}</textarea>
        <input type="date" name="date" value="{{date}}" hidden>
        <div>
            Date: {{comments.date}}
        </div>
        <input type="submit", value="Update" class="btn btn-primary round-corners button-margin">
    </form>
    
    <form action="/blogs-page/blog-post/{{blogID}}" method="get">
        <input type="submit" value="Back" class="btn btn-primary round-corners button-margin">
    </form>
</div>